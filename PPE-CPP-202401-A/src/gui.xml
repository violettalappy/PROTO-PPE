<?xml version="1.0" encoding="utf-8"?>
<document>
	<object id="Canvas" class="Canvas" style="width-1920 height-1080 maxWidth-1920 maxHeight-1080 minWidth-640 minHeight-480 posX-0 posY-0 posZ-0 rotateX-0 rotateY-0 rotateZ-0 scaleX-1 scaleY-1 scaleZ-1 text-dark-50 font-size-m">

		<object id="MainMenu" class="Image" style="width-1920 height-1080 posX-0 posY-0 posZ-0 rotateX-0 rotateY-0 rotateZ-0 scaleX-1 scaleY-1 scaleZ-1 align-left">
			
			<object id="MainMenuTitle" class="Label" style="posX-0 posY-0 posZ-0 posW-0 text-dark-50 font-s">
				<property class="content">@{programTitle}</property>
			</object>
			
			<object id="MainMenuButtonLayout" class="VBox">
				<child>
					<object id="StartGame" class="Button" style="bg-white-90 text-dark-50 font-m">
						<property class="content">Start Game</property>
					</object>
				</child>
				<child>
					<object id="ExitGame" class="Button" signal="OnExitGamePress" style="posX-0 posY-0 posZ-0 posW-0 text-dark-50 font-m">
						<property class="content">ExitGame</property>
					</object>
				</child>
			</object>
			
		</object>

	</object>
</document>

